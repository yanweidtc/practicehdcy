<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/main_title_bar"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/font_title_bar" />

    <TextView
        android:id="@+id/left_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/icon_back"
        android:drawableStart="@mipmap/icon_back"
        android:gravity="center"
        android:paddingStart="@dimen/main_margin_left"
        android:paddingLeft="@dimen/main_margin_left"
        android:paddingRight="@dimen/main_padding_right"
        android:paddingEnd="@dimen/main_margin_right"
        android:textColor="@color/white"
        android:textSize="@dimen/font_title_subtitle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/main_margin_left"
            android:paddingRight="@dimen/main_margin_right"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title_subtitle"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/right_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/main_margin_left"
                android:paddingRight="@dimen/main_margin_right"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title_subtitle"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_custom_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" />
</FrameLayout>